function __prompt_wrap() {
    local color=$1 # https://i.stack.imgur.com/a2S4s.png
    local character=$2
    # $(tput bold
    echo "\[$(tput setaf $color)\]$character \[$(tput sgr0)\]"
}

function __prompt_get_prompt() {
    # https://cutekaomoji.com/animals/bears/
    local arr=()
    arr[0]=$(__prompt_wrap 5 $)
    arr[1]=$(__prompt_wrap 244 â™ž )
    arr[2]=$(__prompt_wrap 160 â¤ )
    arr[3]=$(__prompt_wrap 202 â˜… )
    arr[4]=$(__prompt_wrap 202 Î» )
    arr[5]=$(__prompt_wrap 202 'á••(á›)á•—' )
    arr[6]=$(__prompt_wrap 5 'Â¯\_(ãƒ„)_/Â¯' )
    arr[7]=$(__prompt_wrap 27 â¯ )
    arr[8]=$(__prompt_wrap 5 'Ê•ã£â€¢á´¥â€¢Ê”ã£' )
    arr[9]=$(__prompt_wrap 8 '(à² _à² )' )
    arr[10]=$(__prompt_wrap 160 ÏŸ)
    arr[11]=$(__prompt_wrap 5 'Ê• â€¢á´¥â€¢Ê”')
    arr[12]=$(__prompt_wrap 5 'ð¿')
    arr[13]=$(__prompt_wrap 5 'ãƒ½(ï½€Ð´Â´)ï¾‰')
    arr[14]=$(__prompt_wrap 5 'á•¦(Ã²_Ã³Ë‡)á•¤')
    arr[15]=$(__prompt_wrap 1 'à² ç›Šà² ')
    arr[16]=$(__prompt_wrap 4 'áµ”á´¥áµ”')
    arr[17]=$(__prompt_wrap 6 'ãƒ…')
    arr[18]=$(__prompt_wrap 1 '(â‹‹â–‚â‹Œ)')
    # NOTE - Be sure to change the random modulue below!

    local p=${arr[$1]}
    echo "$p"
}

function __prompt_get_random_prompt() {
    local index=$[$RANDOM % 19]

    echo "$(__prompt_get_prompt ${index})"
}

function __prompt_set_random_prompt() {
    PS1="$(__prompt_get_random_prompt)"
}

function __prompt_set_prompt() {
    PS1="$(__prompt_get_prompt $1)"
}

function __prompt_hooks_after() {
    tmux refresh-client -S &> /dev/null &
}

if [[ -z $PS1 ]]; then
	INTERACTIVE=nope
else
    PS1="$(__prompt_get_random_prompt)\$(__prompt_hooks_after)"

    if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
        PS1="\[$(tput setaf 5)\]\h:\\$ \[$(tput sgr0)\]"
      
      SESSION_TYPE=remote/ssh
    else
      case $(ps -o comm= -p $PPID) in
        sshd|*/sshd) SESSION_TYPE=remote/ssh;;
      esac
    fi

    export PS1
fi
