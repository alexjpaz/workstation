[user]
	name = Alexander Paz
	email = alexjpaz@users.noreply.github.com
	signingkey = 0793FE7D
[alias]
	rbm = "!f() { default=$(git remote show origin | sed -n '/HEAD branch/s/.*: //p'); git rebase origin/$default; }; f"
	rbmi = "!f() { default=$(git remote show origin | sed -n '/HEAD branch/s/.*: //p'); git rebase -i origin/$default; }; f"
	dw = diff HEAD --word-diff=color	
	swd = show --word-diff=color
	rhom = "!f() { default=$(git remote show origin | sed -n '/HEAD branch/s/.*: //p'); git reset --hard origin/$default; }; f"
	add-non-white-space = "!sh -c 'git diff -U0 -w --no-color -- \"$@\" | git apply --cached --ignore-whitespace --unidiff-zero \"#\"'"
	co = checkout
	st = status
	f = !git forest
	t = !git tree
	fall = fetch --all
	d = diff HEAD
	ds = diff --name-status
	dc = diff --cached
	sts = status -s .
	stu = status -unos
	dd = diff --cached HEAD
	tree = log --decorate --graph --abbrev-commit --oneline
	forest = log --decorate --graph --abbrev-commit --oneline --all
	aa = add -u
	p = pull --rebase
	pp = !git p && git push
	vimp = !vim -p $(git diff --name-only)
	merge-squash = "!f() { git merge --squash $@ && git commit -c $@ ; }; f"
	replace = '!git-replace'
    fixup = !git commit --fixup HEAD
    af = "!f() { git aa && git commit --fixup HEAD; }; f"

[core]
	excludesfile = ~/.gitignore_global
[push]
	default = current
[commit]
	#gpgsign = true
[branch]
	;autoSetupMerge = always
[commit]
  template = ~/.gitmessage
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[rebase]
	autoStash = true
[pull]
	rebase = true
